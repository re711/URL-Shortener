<div class="container mt-5">
  <div class="d-flex justify-content-center">
    <div class="">
      <h1 class="d-flex justify-content-center">URL Shortener</h1>
      <i class="fas fa-link fa-10x d-flex justify-content-center mt-5" style="color: rgb(231, 112, 14);"></i>
      <form action="/" method="POST" class="d-flex justify-content-center mt-5">
        <input class="col" type="url" name="url" placeholder="輸入有效網址" value="{{originalUrl}}">
        <button type="submit" class="btn btn-primary ml-3"><i class="far fa-laugh-wink fa-2x"></i></button>
      </form>
      {{#if err}}
        <div class="mt-3"> 
          <span class="text-center alert alert-danger">{{err}}</span>
        </div>
      {{/if}}
    </div>
  </div>
</div>